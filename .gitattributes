# Enforce Unix newlines
*.css   text eol=lf
*.html  text eol=lf
*.js    text eol=lf
*.json  text eol=lf
*.less  text eol=lf
*.md    text eol=lf
*.yml   text eol=lf

# Mark built files as binary
*.map binary
composer.lock binary
*.min.js binary
*.min.css binary

# Skip files on archive
.editorconfig export-ignore
.gitattributes export-ignore
.gitignore export-ignore
.circleci export-ignore
tests export-ignore
