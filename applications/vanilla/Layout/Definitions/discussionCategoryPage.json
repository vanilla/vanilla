{
    "$schema": "http://dev.vanilla.local/api/v2/layouts/schema?layoutViewType=discussionCategoryPage&cacheBuster=5",
    "dateInserted": "2023-08-13T00:00:00Z",
    "layoutViewType": "discussionCategoryPage",
    "layoutID": "discussionCategoryPage",
    "name": "Discussion Category Template",
    "layout": [
        {
            "$hydrate": "react.section.full-width",
            "children": [
                {
                    "$hydrate": "react.app-banner",
                    "showTitle": true,
                    "showDescription": true,
                    "showSearch": true,
                    "titleType": "category/name",
                    "title": {
                        "$hydrate": "param",
                        "ref": "category/name"
                    },
                    "descriptionType": "none"
                }
            ]
        },
        {
            "$hydrate": "react.section.1-column",
            "children": [
                {
                    "$hydrate": "react.breadcrumbs"
                },
                {
                    "$hydrate": "react.asset.categoryFollow",
                    "isAsset": true
                },
                {
                    "$hydrate": "react.asset.categoryList",
                    "apiParams": {
                        "filter": "none"
                    },
                    "title": {
                        "$hydrate": "param",
                        "ref": "category/name"
                    },
                    "titleType": "category/name",
                    "descriptionType": "none",
                    "itemOptions": {},
                    "containerOptions": {
                        "displayType": "grid"
                    },
                    "isAsset": true
                }
            ]
        },
        {
            "$hydrate": "react.section.2-columns",
            "mainBottom": [
                {
                    "$hydrate": "react.asset.discussionList",
                    "apiParams": {
                        "includeChildCategories": true,
                        "sort": "-dateLastComment",
                        "slotType": "a",
                        "limit": 10
                    },
                    "discussionOptions": {
                        "excerpt": {
                            "display": true
                        },
                        "metas": {
                            "display": {
                                "category": true,
                                "commentCount": true,
                                "lastCommentDate": true,
                                "lastUser": true,
                                "score": true,
                                "startedByUser": true,
                                "unreadCount": true,
                                "userTags": true,
                                "viewCount": true
                            }
                        }
                    },
                    "title": "Recent Discussions",
                    "titleType": "static",
                    "descriptionType": "none",
                    "isAsset": true
                }
            ],
            "secondaryBottom": [
                {
                    "$hydrate": "react.guest-cta",
                    "title": "Welcome!",
                    "description": "It looks like you're new here. Sign in or register to get started.",
                    "titleType": "static",
                    "descriptionType": "static",
                    "secondButton": {
                        "title": "Register",
                        "type": "standard"
                    },
                    "button": {
                        "title": "Sign In",
                        "type": "primary"
                    },
                    "background": {
                        "useOverlay": true
                    },
                    "alignment": "left"
                },
                {
                    "$hydrate": "react.newpost",
                    "asOwnButtons": [],
                    "excludedButtons": [],
                    "postableDiscussionTypes": ["discussion", "question", "poll"]
                },
                {
                    "$hydrate": "react.quick-links",
                    "title": "Quick Links",
                    "titleType": "static"
                }
            ]
        }
    ]
}
