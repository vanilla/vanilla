{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "sourceMap": true,
        "lib": ["es2019", "dom"],
        "isolatedModules": false,
        "strictNullChecks": true,
        "jsx": "react",
        "paths": {
            "@library/*": ["../library/src/scripts/*"],
            "@dashboard/*": ["../applications/dashboard/src/scripts/*"],
            "@rich-editor/*": ["../plugins/rich-editor/src/scripts/*"],
            "happypack": ["./scripts/@types/happypack"],
            "prettier-webpack-plugin": ["./scripts/@types/prettier-webpack-plugin"],
            "terser-webpack-plugin": ["./scripts/@types/terser-webpack-plugin"],
            "react-docgen-typescript-webpack-plugin": ["./scripts/@types/react-docgen-typescript-webpack-plugin"]
        }
    }
}
