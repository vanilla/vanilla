        "tar": ">=4.4.2"
    },
    "scripts": {
        "pre-push": "yarn build && yarn test && yarn check-types",
        "install-all": "ts-node -P build/tsconfig.json build/scripts/install.ts",
        "build": "ts-node -P build/tsconfig.json build/scripts/build.ts",
        "build:dev": "yarn run build --mode=development",
        "build:analyze": "yarn run build --mode=analyze",
        "test": "ts-node -P build/tsconfig.json build/scripts/test.ts --mode=test",
        "test:watch": "ts-node -P build/tsconfig.json build/scripts/test.ts --mode=testwatch",
        "test:debug": "ts-node -P build/tsconfig.json build/scripts/test.ts --mode=testdebug",
        "check-types": "tsc -p tsconfig.json --noemit && yarn lint",
        "check-types:watch": "tsc-watch -p tsconfig.json --noemit --onSuccess \"yarn lint\"",
        "lint": "tslint -c ./tslint.json -e './**/node_modules/**' -e './**/src/**/*.{js,jsx}' -p ./tsconfig.json -t stylish",
        "storybook": "start-storybook -p 9001 -c build/.storybook",
        "bootstrap": "lerna bootstrap"
    }
