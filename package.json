    "scripts": {
        "postinstall": "yarn patch-package",
        "scaffold": "ts-node -P build/tsconfig.json build/scripts/scaffold/index.ts",
        "publish-all": "lerna publish from-package",
        "install-all": "ts-node -P build/tsconfig.json build/scripts/install.ts",
        "pre-push": "yarn build && yarn test && yarn check-types",
        "build": "yarn run build:assets && yarn build:variable-docs",
        "build:assets": "ts-node -P build/tsconfig.json build/scripts/build.ts",
        "build:dev": "yarn run build:assets --mode=development --m",
        "build:analyze": "yarn run build:assets --mode=analyze",
        "build:variable-docs": "ts-node -P build/tsconfig.json build/scripts/variables/buildVariableDocs.ts",
        "update:tsconfig": "node ./packages/updateTsconfig.js",
        "test": "yarn test:unit && yarn test:browser",
        "test:browser": "ts-node -P build/tsconfig.json build/scripts/test.ts --mode=test",
        "test:browser:watch": "ts-node -P build/tsconfig.json build/scripts/test.ts --mode=testwatch",
        "test:browser:debug": "ts-node -P build/tsconfig.json build/scripts/test.ts --mode=testdebug",
        "test:unit": "JEST=true node --preserve-symlinks --preserve-symlinks-main node_modules/.bin/jest",
        "test:unit:watch": "yarn test:unit --watch",
        "check-types": "tsc -p tsconfig.json --noemit",
        "check-types:watch": "tsc -p tsconfig.json --noemit --watch",
        "lint": "jest -c ./jest.eslint.config.js",
        "prepare-storybook-legacy": "./vendor/bin/phpunit -c phpunit.xml --testsuite=\"Storybook\"",
        "storybook:ui": "STORYBOOK_SECTION=ui yarn storybook",
        "storybook:foundation": "yarn prepare-storybook-legacy && STORYBOOK_SECTION=foundation yarn storybook",
        "storybook": "NODE_OPTIONS=--max_old_space_size=2048 NODE_ENV=test node ./node_modules/.bin/start-storybook -p 9001 -c build/.storybook",
        "storybook:modern": "STORYBOOK_SECTION=modern yarn storybook",
        "build-storybook": "yarn prepare-storybook-legacy && node --max-old-space-size=2048 ./node_modules/.bin/build-storybook -c build/.storybook -o build/.out",
        "chromatic": "chromatic test"
    }
