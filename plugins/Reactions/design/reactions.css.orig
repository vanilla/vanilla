.ReactSpam {         background-position: -71px; }
.ReactAbuse {        background-position: -103px; }
.ReactTroll {        background-position: -135px; }
.ReactDisagree {     background-position: -167px; }
.ReactOffTopic {     background-position: -199px; }
.ReactAgree {        background-position: -231px; }
.ReactLike {         background-position: -263px; }
.ReactDislike {      background-position: -295px; }
.ReactAwesome {      background-position: -327px; }
.ReactLOL {          background-position: -359px; }
.ReactWTF {          background-position: -391px; }
