.Reactions {
   position: relative;
   margin: 5px 0 0;
   font-size: 11px;
   line-height: 18px;
}

.Reactions .Handle {
   display: inline-block;
   opacity: .3;
}

.React {
   position: absolute;
   right: 0;
   top: 0;
}

.ReactHeading {
   display: inline-block;
   padding: 0px 6px;
   background: rgba(0,0,0,0.04);
   color: rgba(0,0,0,0.4);
}

.Flag .ReactHeading {
   border-radius: 4px 0 0 4px;
}

.React .ReactHeading {
   border-radius: 0 4px 4px 0;
}

.Item:hover .ReactHeading {
   background: rgba(0,0,0,0.8);
   color: #fff;
}

.ReactButton {
   display: inline-block;
   padding: 0px 2px;
   border-radius: 12px;
   
   margin: 0 2px;
   padding: 0 3px 0 0;
}

/* Hover Mechanics */
.Reactions a {
   color: #000;

/*   -webkit-transition: all .3s ease-in-out;
	-moz-transition: all .3s ease-in-out;
	-o-transition: all .3s ease-in-out;
	-ms-transition: all .3s ease-in-out;
	transition: all .3s ease-in-out;*/
}
/*
This was causing text-decoration: underline to float above the text of the label in cartalk.
.ReactLabel {
   vertical-align: top;
}
*/
.Reactions .Count {
   border-radius: 6px;
   -moz-border-radius: 6px;
   -webkit-border-radius: 6px;
   vertical-align: top;
   background: #494949;
   background: rgba(0, 0, 0, 0.7);
}

.ReactSprite {
   background: url('reaction-sprites-grey.png') 1px no-repeat transparent;
   height: 18px;
   width: 18px;
   display: inline-block;
   vertical-align: top;
   
   border-radius: 18px;
}

.MenuItems .ReactSprite {
   background-image: url('reaction-sprites-light-grey.png');
}

.ReactButton {
   opacity: 0;
   line-height: 18px;
}

.Item:hover .Reactions .Handle {
   opacity: .75;
}

.Reactions .ReactHandle {
   display: none;
}

/*.Item {
   -webkit-transition: all .3s ease-in-out;
   -moz-transition: all .3s ease-in-out;
   -o-transition: all .3s ease-in-out;
   -ms-transition: all .3s ease-in-out;
   transition: all .3s ease-in-out;
}*/
/*
TOO DESTRUCTIVE FOR A PLUGIN!
.Item:hover {
   background: #F0FAFF;
}
*/

.Item:hover .Reactions a {
   opacity: .8;
   width: inherit;
}

.MenuItems li:hover .ReactButton .ReactSprite,
.ReactButton:hover .ReactSprite,
.HasCount .ReactSprite {
   background-image: url('reaction-sprites-color.png');
}
.Reactions a.HasCount {
   display: inline-block;
   opacity: 1 !Important;
}

.InProgress .ReactSprite {
   background-image: none !Important;
   background: transparent !Important;
}
.InProgress .Count {
   visibility: hidden;
}

