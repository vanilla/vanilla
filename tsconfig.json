{
    "compilerOptions": {
        "jsx": "react",
        "allowJs": true,
        "lib": [
            "es2017",
            "dom",
            "dom.iterable"
        ],
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "target": "es2017",
        "module": "esnext",
        "baseUrl": ".",
        "paths": {
            "@core/*": ["./src/scripts/*"],
            "@vanilla/*": ["./applications/vanilla/src/scripts/*"],
            "@dashboard/*": ["./applications/dashboard/src/scripts/*"]
        },
        "skipLibCheck": true
    },
    "include": [
        "src/scripts/**/*",
        "plugins/rich-editor/src/scripts/**/*",
        "**/@types/**/*.ts",
        "global.ts"
    ]
}
