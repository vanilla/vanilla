{
    "compilerOptions": {
        "allowJs": true,
        "jsx": "react",
        "lib": [
            "es2017",
            "dom",
            "dom.iterable"
        ],
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "target": "es5",
        "module": "esnext",
        "baseUrl": ".",
        "downlevelIteration": true,
        "paths": {
            "*": [
                "node_modules/*"
            ],
            "@vanilla/*": ["./applications/vanilla/src/scripts/*"],
            "@dashboard/*": ["./applications/dashboard/src/scripts/*"]
        },
        "typeRoots": [
            "node_modules/@types",
            "applications/*/node_modules/@types",
            "plugins/*/node_modules/@types",
            "plugins/*/src/scripts/@types"
        ],
        "skipLibCheck": true,
        "sourceMap": true
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "**/*.js",
        "**/*.jsx"
    ]
}
